 "html": "{% if letter_head%}\n<table style=\"border: 1px solid black;\">\n    <tr>\n        <td>\n\n            {{letter_head}}\n\n        </td>\n    </tr>\n</table>\n{% endif %}\n<div>\n<div style=\"margin-bottom:20px;\">\n    <div style=\"border: 1px solid black; padding: 10px;height:900px;\">\n\n\n<div>\n  <h3 ><b>SALARY SLIP</b></h3>\n</div>\n<div style=\"text-align:left\">\n  <h5 style=\"margin-bottom:40px; border-bottom:1px solid;\"><b>Sal Slip/</b>{{doc.employee}}</h5>\n</div>\n\n<div style=\"margin-bottom:20px; margin-top:-28px;\">\n\n\n\n<table>\n  <tr>\n    <td><b>Employee:</b></td>\n    <td>{{doc.employee}}</td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td> <td></td>\n    <td></td>\n\n    <td><b>Start Date:</b></td>\n    <td>{{doc.get_formatted(\"start_date\")}}</td>\n  </tr>\n  <tr>\n    <td><b>Company:</b></td>\n    <td>{{doc.company}}</td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td> <td></td>\n    <td></td>\n\n    <td><b>End Date:</b></td>\n    <td>{{ doc.get_formatted(\"end_date\") }}</td>\n  </tr>\n  <tr>\n    <td><b>Employee Name:</b></td>\n    <td>{{doc.employee_name}}</td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td> <td></td>\n    <td></td>\n    <td><b>Working Days:</b></td>\n    <td>{{doc.total_working_days}}</td>\n  </tr>\n  <tr>\n    <td><b>Department:</b></td>\n    <td>{{doc.department}}</td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td> <td></td>\n    <td></td>\n    <td><b>Leave Without Pay:</b></td>\n    <td>{{doc.leave_without_pay}}</td>\n  </tr>\n  <tr>\n    <td><b>Designation:</b></td>\n    <td>{{doc.designation}}</td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td> <td></td>\n    <td></td>\n\n    <td><b>Payment Days:</b></td>\n    <td>{{doc.payment_days}}</td>\n  </tr>\n  <tr>\n    <td><b>Branch:</b></td>\n    <td>{{doc.branch}}</td>\n    <td></td>\n    <td></td>\n    <td></td>\n    <td></td> <td></td>\n    <td></td>\n  </tr>\n</table>\n\n\n</div>\n\n\n<div  class=\"table-container\">\n    <div class=\"innerdiv1\">\n        <span style=\"padding-left:5px;\">Earning</span>\n    <table style=\"margin-bottom:10px;border:1px solid\">\n           \n        <tr style = \"border:1px solid\">\n            <th style =\"color:black;border-right:1px solid;\">Sr</th>\n            <th style =\"color:black;border-right:1px solid;\">Component</th>\n            <th style =\"color:black;border-right:1px solid;\">Amount</th>\n        </tr>\n        {% for earning in doc.earnings %}\n            {% set salary_component = frappe.get_doc(\"Salary Component\", earning.salary_component) %}\n            {% if not salary_component.hide_from_salary_slip %}\n                <tr style = \"border:1px solid\">\n                    <td style = \"border-right:1px solid; \">{{ loop.index }}</td>\n                    <td style = \"border-right:1px solid; \">{{ earning.salary_component }}</td>\n                    <td style = \"border-right:1px solid; \">{{ earning.get_formatted(\"amount\") }}</td>\n                </tr>\n            {% endif %}\n        {% endfor %}\n    </table>\n    </div>\n    <div class=\"innerdiv1\">\n        <span style=\"padding-left:5px;padding-left:-1px;\">Deduction</span>\n    <table style=\"margin-bottom:10px;border:1px solid;\">\n        <tr style = \"border:1px solid\">\n            <th style =\"color:black;border-right:1px solid;\">Sr</th>\n            <th style =\"color:black;border-right:1px solid;\">Component</th>\n            <th style =\"color:black;border-right:1px solid;\">Amount</th>\n        </tr>\n        {% for earning in doc.deductions %}\n            <tr style = \"border:1px solid\">\n                <td style = \"border-right:1px solid; \">{{ loop.index }}</td>\n                <td style = \"border-right:1px solid; \">{{ earning.salary_component }}</td>\n                <td style = \"border-right:1px solid; \">{{ earning.get_formatted(\"amount\") }}</td>\n            </tr>\n        {% endfor %}\n    </table>\n</div>\n</div>\n\n\n\n\n<table align=\"right\" border=\"1\" style=\"width:100%;\">\n  <tr>\n    <td style=\"width:20%\"><b>Gross Pay</b></td>\n    <td style=\"width:20%\">{{doc.get_formatted(\"gross_pay\")}}</td>\n    <td style=\"width:20%\"><b>Net Pay</b></td>\n    <td style=\"width:20%\">{{doc.get_formatted(\"net_pay\")}}</td>\n\n  </tr>\n  <tr>\n    <td><b>Total Deduction</b></td>\n    <td>{{doc.get_formatted(\"total_deduction\")}}</td>\n\n    <td><b>Rounded Total</b></td>\n    <td>{{doc.get_formatted(\"rounded_total\")}}</td>\n  </tr>\n</table>\n<table style=\"width:100%; border:1px solid; border-top:none; margin-bottom:20px;\">\n<tr>\n    <td style=\"width:50%;\"><b>Total In Words</b></td>\n    <td style=\"width:50%; border-left:1px solid;\">{{doc.get_formatted(\"total_in_words\")}}</td>\n  </tr>\n\n\n\n\n {% set pan = frappe.get_doc(\"Employee\", {\"name\": doc.employee}, [\"pan_number\",\"bank_name\",\"bank_ac_no\",\"provident_fund_account\",\"custom_esic\"])%}\n\n\n<tr style=\" border-bottom:1px solid;border-top:1px solid;\">\n    <td style=\"width:50%;\"><b>Bank Name</b></td>\n    <td style=\"width:50%; border-left:1px solid;\">{{pan.bank_name}}</td>\n  </tr>\n  <tr>\n    <td style=\"width:50%;\"><b>Bank A/C No.</b></td>\n    <td style=\"width:50%; border-left:1px solid;\">{{pan.bank_ac_no}}</td>\n  </tr>\n  <tr style=\" border-bottom:1px solid;border-top:1px solid;\">\n    <td style=\"width:50%;\"><b>Pan No.</b></td>\n    <td style=\"width:50%; border-left:1px solid;\">{{pan.pan_number}}</td>\n  </tr>\n  <tr style=\" border-bottom:1px solid;border-top:1px solid;\">\n    <td style=\"width:50%;\"><b>UAN No.</b></td>\n    <td style=\"width:50%; border-left:1px solid;\">{{pan.provident_fund_account}}</td>\n  </tr>\n  <tr style=\" border-bottom:1px solid;border-top:1px solid;\">\n    <td style=\"width:50%;\"><b>ESIC No.</b></td>\n    <td style=\"width:50%; border-left:1px solid;\">{{pan.custom_esic}}</td>\n  </tr>\n\n</table>\n</div>",
